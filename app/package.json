{
    "name": "jike-calendar",
    "version": "0.2.1",
    "description": "A menubar calendar on Mac with Electron.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": "https://github.com/ryanfwy/jike-calendar",
    "keywords": [
        "electron",
        "jike",
        "calendar"
    ],
    "author": "Ryan",
    "license": "MIT",
    "devDependencies": {
        "electron": "^4.0.1",
        "electron-builder": "latest"
    },
    "resource": {
        "url": "https://raw.githubusercontent.com/ryanfwy/jike-calendar/master/update.json"
    },
    "build": {
        "productName": "Jike Calendar",
        "appId": "com.jike-calendar.app",
        "directories": {
            "output": "../build/v"
        },
        "asarUnpack": [
            "./config"
        ],
        "mac": {
            "icon": "../build/icons/icon.icns",
            "category": "public.app-category.utilities",
            "darkModeSupport": true,
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 200,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 200,
                    "type": "file"
                }
            ]
        },
        "electronVersion": "4.0.1"
    }
}
